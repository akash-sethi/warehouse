{
  "name": "warehouse-app",
  "version": "1.0.0",
  "scripts": {
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d -V --no-deps",
    "app-logs:dev": "docker logs warehouse-app-dev -f",
    "docker:dev-with-build": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build -V -d",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p .",
    "docker:prod-build": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up build",
    "lint": "tsc && eslint src",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --check '**/*.ts'",
    "prettier:fix": "prettier --write '**/*.ts'",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll"
  },
  "author": "akash.sethi2018@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-graphql": "^0.9.0",
    "@types/faker": "^5.5.9",
    "@types/graphql": "^14.5.0",
    "@types/graphql-upload": "^8.0.7",
    "@types/http-status": "^1.1.2",
    "@types/jest": "^27.0.2",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.11.7",
    "@types/stream-chain": "^2.0.1",
    "@types/stream-json": "^1.7.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "faker": "^5.5.3",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "mockingoose": "^2.15.2",
    "mongodb-memory-server": "^8.0.2",
    "node-mocks-http": "^1.11.0",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@graphql-tools/merge": "^8.2.1",
    "@graphql-tools/schema": "^8.3.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^16.0.1",
    "graphql-tag": "^2.12.6",
    "graphql-upload": "^12.0.0",
    "http-status": "^1.5.0",
    "joi": "^17.4.2",
    "mongoose": "^6.0.12",
    "stream-chain": "^2.2.4",
    "stream-json": "^1.7.3"
  }
}
